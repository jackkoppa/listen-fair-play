{
  "name": "listen-fair-play",
  "version": "1.0.0",
  "private": true,
  "description": "A system for processing and analyzing podcast content",
  "scripts": {
    "client:dev": "pnpm --filter listen-fair-play dev",
    "client:test": "pnpm --filter listen-fair-play test",
    "client:build": "pnpm --filter listen-fair-play build",
    "run:rss:local": "pnpm --filter podcast-processing run run:rss:local",
    "run:rss:dev-s3": "pnpm --filter podcast-processing run run:rss:dev-s3",
    "run:whisper:local": "pnpm --filter podcast-processing run run:whisper:local",
    "run:whisper:dev-s3": "pnpm --filter podcast-processing run run:whisper:dev-s3",
    "build:processing": "pnpm --filter podcast-processing build",
    "install:all": "pnpm install"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
} 